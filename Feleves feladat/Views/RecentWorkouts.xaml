<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Feleves_feladat.Views.RecentWorkouts"
             Title="NewPage1">
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding Workouts}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Label
                            Text="{Binding Name}"/>
                        <CollectionView ItemsSource="{Binding Exercises}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*,*,*">
                                        <Label 
                                            Text="{Binding Name}"/>
                                        <Label
                                            Text="{Binding Intensity}"/>
                                        <Label
                                            Text="sets"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>