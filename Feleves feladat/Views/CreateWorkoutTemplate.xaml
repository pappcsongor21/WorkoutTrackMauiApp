<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Feleves_feladat.Views.WorkoutCreatorPage"
             xmlns:vms="clr-namespace:Feleves_feladat.ViewModels"
             xmlns:models="clr-namespace:Feleves_feladat.Models"
             xmlns:local="clr-namespace:Feleves_feladat"
             x:DataType="vms:CreateWorkoutTemplateViewModel"
             Title="WorkoutCreatorPage">
    <ContentPage.Resources>
        <local:WorkoutColorConverter x:Key="WorkoutColorConv"/>
    </ContentPage.Resources>
    
    <ScrollView>
        <VerticalStackLayout>
            <Grid ColumnDefinitions="*,Auto">
                <Entry
                    Text="{Binding Name}"
                    Grid.Column="0"
                    BackgroundColor="{Binding Color, 
                    Converter={StaticResource WorkoutColorConv}}"/>
                <Picker
                    Grid.Column="1"
                    ItemsSource="{Binding Colors}"
                    SelectedItem="{Binding Color, Mode=TwoWay}" />
            </Grid>
            <CollectionView ItemsSource="{Binding Exercises}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Exercise">
                        <Grid ColumnDefinitions="*,*,*">
                            <Label
                                Grid.Column="0"
                                Text="{Binding Name}"/>
                            <Label
                                Grid.Column="1"
                                Text="{Binding Intensity}"/>
                            <Label
                                Grid.Column="2"
                                Text="sets"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button
                Text="Add exercise"
                Command="{Binding GoToSelectExerciseCommand}"
                TextColor="Black"
                BackgroundColor="{StaticResource PrimaryColor}"
                FontSize="24"
                FontAttributes="Bold"
                HeightRequest="150"
                CornerRadius="0"
                Margin="0,5,0,0"/>
            <Button
                Text="Save workout"
                Command="{Binding SaveWorkoutCommand}"
                TextColor="Black"
                BackgroundColor="{StaticResource PrimaryColor}"
                FontSize="24"
                FontAttributes="Bold"
                HeightRequest="150"
                CornerRadius="0"
                Margin="0,5,0,0"/>  
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>