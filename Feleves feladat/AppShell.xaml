<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Feleves_feladat.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Feleves_feladat"
    xmlns:views="clr-namespace:Feleves_feladat.Views"
    Title="Feleves_feladat">

    <TabBar Route="TabBar">
        <Tab Title="Main">
            <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="mainpage" />
        </Tab>
        <Tab Title="ChooseWorkout">
            <ShellContent
                Title="ChooseWorkout"
                ContentTemplate="{DataTemplate local:ChooseWorkoutPage}"
                Route="chooseworkout"/>
        </Tab>
        <Tab Title="RecentWorkouts">
            <ShellContent
        Title="RecentWorkouts"
        ContentTemplate="{DataTemplate views:RecentWorkoutsPage}"
        Route="recentworkouts"/>
        </Tab>
    </TabBar>
    <ShellContent
        Title="Workout"
        ContentTemplate="{DataTemplate local:WorkoutPage}"
        Route="workout"/>
    <ShellContent
        Title="WorkoutCreator"
        ContentTemplate="{DataTemplate views:WorkoutCreatorPage}"
        Route="workoutcreator"/>
    <ShellContent
        Title="SelectExercise"
        ContentTemplate="{DataTemplate views:SelectExercisePage}"
        Route="selectexercise"/>
</Shell>
